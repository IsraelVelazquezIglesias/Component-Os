<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Store_Fragments.Componentes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolComponentes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Clodus"
            android:gravity="center"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabC"
            app:layout_constraintBottom_toBottomOf="@+id/toolMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            android:background="@color/SecG"
            app:tabIndicatorColor="@color/Ref"
            >
        </android.support.design.widget.TabLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/hello_blank_fragment"
            app:layout_constraintTop_toBottomOf="@+id/tabI"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/actionbC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/shop_cart"

        android:layout_margin="16dp"
        app:fabSize="auto"
        android:background="@color/SecG"
        />

</FrameLayout>
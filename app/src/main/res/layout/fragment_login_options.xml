<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginOptions">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pcbimage2" />

    <EditText
        android:id="@+id/CorreoL"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/ContrasenaL"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/mostarCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp"
        android:text="Mostrar Contrase単a" />

    <Button
        android:id="@+id/ContinuarL"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="#000000"
        android:text="Continuar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/RegresarL"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:background="#D8D8D8"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/contrL"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="#ecf0f1"
        android:text="多Olvidaste tu contrase単a?"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</FrameLayout>